<div class="row">
    <div class="col-md-12">
        {{#if message}}
        <div class="col-md-12 text-center">
            <strong>{{message}}</strong>
          </div>
          {{/if}}
          {{!-- {{#if categories}} --}}
          <h2><a href="/categories/add" class="btn btn-success pull-right">Add Category</a></h2>
          <hr />
           <table class="table ">
            <thead>
            <tr>
                <th>Category ID</th>
                <th>Category Name</th>
            </tr>
            </thead>
            <tbody>
             {{#each categories}}
                <tr>
                    <td><a href="/categories={{this.id}}">{{this.id}}</a></td>
                    <td><a href="/categories={{this.id}}">{{this.category}}</a></td>
                    <td><a href="/categories/delete/{{this.id}}" class="btn btn-danger">remove</a></td>
                </tr>
              {{/each}}
            </tbody>
            </table>
            {{!-- {{/if}} --}}
    </div>
</div>