<div class="row">
    <section class="main col-md-9">
        {{#if data.dataThere}}
           <div class="col-md-12 text-center">
            <p>Please try another Post / Category</p>
           </div>
        {{/if}}
        {{#if data.post}}
        <article>
            <h2>{{data.post.title}}</h2>
            <img src="{{data.post.featureImage}}" alt="feature Image" style="width:100%" />
            {{#safeHTML data.post.body}}
              {{data.post.body}}
            {{/safeHTML}}<br/>
            <strong>Category:</strong>{{data.post.category}}<br />
            {{!-- <strong>Last Updated:</strong> {{#formatDate data.post.postDate}} --}}

        </article>
        {{/if}}
        {{#if data.message}}
        <div class="col-md-12 text-center">
            <h2>{{data.message}}</h2>
            <p>Please try another Post / Category</p>
        </div>
        {{/if}}
    </section>
    <aside class="col-md-3">
        <br /><br />
        {{#if data.posts}}
        <h4>Posts</h4>
        <ul class="list-group">
            {{#each data.posts}}
            <a href="/blog/{{this.id}}?category={{this.category}}" class="list-group-item">{{this.title}}</a>
            {{/each}}
        </ul>
      {{/if}}
      {{#if data.categories}}
        <h4>Categories</h4>

        <ul class="list-group">
            {{#each data.categories}}
           <a href="/blog?category={{this.id}}" class="list-group-item"> {{this.category}}</a>
            {{/each}}
        </ul>
        {{/if}}
        {{#if data.categoriesMessage}}
                <div class="col-md-12 text-center">
            <h2>{{data.categoriesMessage}}</h2>
             <p>Please try another Post / Category</p>
        </div>
        {{/if}}
    </aside>
</div>