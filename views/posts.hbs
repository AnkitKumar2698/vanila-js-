<div class="row">
    <div class="col-md-12">
        {{#if message}}
        <div class="col-md-12 text-center">
            <strong>{{message}}</strong>
         </div>
         {{/if}}
          <h2><a href="/posts/add" class="btn btn-success pull-right">Add Post</a></h2>
          <hr />
          <div class="table-responsive">
            <table class="table ">
                <thead>
                    <tr>
                        <th>Post&nbsp;ID</th>
                        <th>Title</th>
                        <th>Post&nbsp;Date</th>
                        <th>Category</th>
                        <th>Published</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                    {{#if dataThere}}
                    <td></td>
                    <td></td>
                    <td></td>
                    <td >{{dataThere}}</td>
                    <td></td>
                    <td></td>
                      {{/if}}
                    </tr>

                      {{#each posts}}
                    <tr>
                      
                        <td> {{this.id}}</td>
                        <td>{{this.title}}</td>
                        <td>{{this.postDate}}</td>
                        <td><a href="/posts/category={{this.category}}">{{this.category}}</a></td>
                        <td>{{this.published}}</td>
                        <td><a href="/posts/delete/{{this.id}}" class="btn btn-danger">remove</a></td>
                    </tr>
                   {{/each}}
                   

                 </tbody>
                </table> 
          
    </div>
</div>